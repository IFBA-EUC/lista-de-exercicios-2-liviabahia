            public class pedido {
          String cliente;
          int qb;
          
          
          public String getCliente() {
            return cliente;
          }
          public void setCliente(String cliente) {
            this.cliente = cliente;
          }
          public int getQb() {
            return qb;
          }
          public void setQb(int qb) {
            this.qb = qb;
          }
          
          }
          public static void pedido(String cliente, qb) {
          cliente = cliente;
          qb = qb;
            
            System.out.println("Cliente: " +cliente+ "efetivou um pedido com " + qb);
          }
        
          }
          
        
        
